    border-radius: 40px;
    background-size:200% ;
}


.home-sci a {
    margin-top: 20px;
    margin-left: 50px;
    display: flex;
    width: 50px;
    justify-content: center;
    align-items: center;
    height: 50px;
    background:linear-gradient(45deg, #f06,#3cf);
    border-radius: 50%;
    font-size: 20px;
    color: #fff;
    text-decoration: none;
    z-index: 1;
}
.home-sci a::after{
    content: '';
    position: absolute;
    border-radius: 50%;
    transform: scale(.88);
    z-index: -1;
    transition: .5s ease;
}

.home-sci a:hover::after{
    transform: scale(0);

}






